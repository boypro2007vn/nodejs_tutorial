<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <script src="jquery-3.1.1.min.js"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      var count = 0;
      $('#btn-like').click(function(){
        var id = $('#in-id').val();
        $.get(`/api/like/${id}`,(data)=>{
          $('#btn-like').html(data + " Like");
        })
      })

      $('#btn-unlike').click(function(){
        var id = $('#in-id').val();
        $.get(`/api/unlike/${id}`,(data)=>{
          $('#btn-unlike').html(data + " UnLike");
        })
      })

      $('#sau').click(function(){
        count++;
        $.get(`/api/sau/${count}`,(data)=>{
          $('#tx-name').html(data.name);
          $('#in-id').val(data.id);
          $('#image').attr("src",`images/${data.image}`);
          $('#btn-like').html(data.nlike + " Like");
          $('#btn-unlike').html(data.nunlike + " UnLike");
        })
      })
      $('#truoc').click(function(){
        count--;
        $.get(`/api/truoc/${count}`,(data)=>{
          $('#tx-name').html(data.name);
          $('#in-id').val(data.id);
          $('#image').attr("src",`images/${data.image}`);
          $('#btn-like').html(data.nlike + " Like");
          $('#btn-unlike').html(data.nunlike + " UnLike");
        })
      })
    })
  </script>
  <body>
    <div class="wrapper">
      <h1 id="tx-name"><%=info.name%></h1>
      <div class="app">
        <a href="#" id="truoc">Truoc</a>
        <a href="#" id="sau">Sau</a>
        <input type="hidden" id="in-id" value="<%=info.id%>">
        <p></p>
        <img src="images/<%=info.image%>" alt="" id="image">
        <p></p>
        <a href="#" id="btn-like"><%=info.nlike%> Like</a>
        <a href="#" id="btn-unlike"><%=info.nunlike%> UnLike</a>
      </div>
    </div>
  </body>
</html>
